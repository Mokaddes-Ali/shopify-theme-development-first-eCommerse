$(document).ready(function() {

$(document).ready(function() {
  // Image Gallery Functionality
  $('.thumbnail').click(function() {
    // Remove active class from all thumbnails
    $('.thumbnail').removeClass('active');
    
    // Add active class to clicked thumbnail
    $(this).addClass('active');
    
    // Get image source from data attribute
    var newImageSrc = $(this).data('img');
    
    // Fade out current main image
    $('#mainProductImage').fadeOut(300, function() {
      // Change image source
      $(this).attr('src', newImageSrc);
      
      // Fade in new image
      $(this).fadeIn(300);
    });
  });
});
 
  
  // Tab functionality
  $('.tab-item').click(function() {
    // Remove active class from all tabs
    $('.tab-item').removeClass('text-black font-medium border-b-2 border-black').addClass('text-black/60 font-normal');
    
    // Add active class to current tab
    $(this).removeClass('text-black/60 font-normal').addClass('text-black font-medium border-b-2 border-black');
    
    // Hide all tab content
    $('.tab-content').hide();
    
    // Show current tab content
    var tabId = $(this).data('tab');
    $('#' + tabId + '-content').fadeIn(300);
  });
  
  // Initialize first tab as active
  $('#reviews-content').show();
  
  // Quantity button functionality
  $('.quantity-btn.plus').click(function() {
    var currentVal = parseInt($('.quantity-value').text());
    $('.quantity-value').text(currentVal + 1);
  });
  
  $('.quantity-btn.minus').click(function() {
    var currentVal = parseInt($('.quantity-value').text());
    if (currentVal > 1) {
      $('.quantity-value').text(currentVal - 1);
    }
  });
  
  // Color selection
  $('.color-option').click(function() {
    $('.color-option').removeClass('active ring-2 ring-offset-2 ring-black');
    $(this).addClass('active ring-2 ring-offset-2 ring-black');
    
    // You can also change product images based on color selection
    // var color = $(this).data('color');
    // $('.thumbnail[data-color="' + color + '"]').trigger('click');
  });
  
  // Size selection
  $('.size-option').click(function() {
    $('.size-option').removeClass('active bg-black').addClass('bg-zinc-100');
    $('.size-option div').removeClass('text-white').addClass('text-black/60');
    
    $(this).addClass('active bg-black');
    $(this).find('div').removeClass('text-black/60').addClass('text-white');
  });
});
</script>