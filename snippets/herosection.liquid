<div class="w-full max-w-4xl mx-auto relative">
    <!-- Left Arrow Button -->
    <button class="absolute top-1/2 -left-6 transform -translate-y-1/2 slick-prev bg-gray-200 hover:bg-gray-400 p-2 rounded-full">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
    </button>

    <!-- Review Slider -->
    <div class="review-slider">
        {% for i in (1..10) %}
        <div class="bg-white p-6 rounded-xl shadow-lg border">
            <!-- Star Ratings -->
            <div class="flex gap-1 mb-2">
                {% for star in (1..5) %}
                    <img src="{{ 'star.png' | asset_url }}" alt="star" class="w-5 h-5">
                {% endfor %}
            </div>

            <!-- Customer Name & Verified Badge -->
            <div class="flex items-center gap-2">
                <p class="font-bold text-lg">Sarah M.</p>
                <span class="w-5 h-5 flex items-center justify-center bg-green-500 text-white text-sm font-bold rounded-full">✓</span>
            </div>

            <!-- Review Text -->
            <p class="text-gray-700 mt-2">
                "I'm blown away by the quality and style of the clothes I received from Shop.co. 
                From casual wear to elegant dresses, every piece I've bought has exceeded my expectations."
            </p>
        </div>
        {% endfor %}
    </div>

    <!-- Right Arrow Button -->
    <button class="absolute top-1/2 -right-6 transform -translate-y-1/2 slick-next bg-gray-200 hover:bg-gray-400 p-2 rounded-full">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-red-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
    </button>
</div>

<script>
    $(document).ready(function(){
        $('.review-slider').slick({
            slidesToShow: 3,
            slidesToScroll: 1,
            autoplay: true,
            autoplaySpeed: 2000,
            infinite: true,
            prevArrow: $('.slick-prev'), // Left Arrow Button
            nextArrow: $('.slick-next'), // Right Arrow Button
            responsive: [
                { breakpoint: 1024, settings: { slidesToShow: 2 } },
                { breakpoint: 640, settings: { slidesToShow: 1 } }
            ]
        });
    });
</script>