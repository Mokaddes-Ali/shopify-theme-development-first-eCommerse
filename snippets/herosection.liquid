<div class="py-10 mb-32">
    <div class="container">
        <div class="">
            <h3 class="text-title text-left">OUR HAPPY CUSTOMERS</h3>
        </div>
        <!-- Next & Previous Buttons (Right Side) -->
        <div class="flex justify-end right-0 top-0 mb-6">
            <button class="prev-btn bg-white hover:bg-gray-400 text-black px-4 py-2 rounded">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
                  </svg>                  
            </button>
            <button class="next-btn bg-white hover:bg-gray-400 text-black px-4 py-2 rounded">
                
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
                  </svg>                  
            </button>
        </div> 
      
        <!-- Slick Carousel Container -->
        <div class="slick-carousel">
            {% for i in (1..5) %}
            <div class="slick-slide">
                <div class="bg-white w-[350px] p-6 rounded-xl shadow-lg border border-gray-400">
                    <!-- Star Ratings -->
                    <div class="flex gap-1 mb-2">
                        {% for star in (1..5) %}
                        <div class="text-yellow-400">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" class="h-6" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
                            </svg>
                        </div>
                        {% endfor %}
                    </div>

                    <!-- Customer Name & Verified Badge -->
                    <div class="flex items-center gap-2">
                        <p class="font-bold text-lg">Sarah M.</p>
                        <span class="w-5 h-5 flex items-center justify-center bg-green-500 text-white text-sm font-bold rounded-full">✓</span>
                    </div>

                    <!-- Review Text -->
                    <p class="text-gray-700 mt-2">
                        "I'm blown away by the quality and style of the clothes I received from Shop.co. 
                        From casual wear to elegant dresses"
                    </p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

<script>
    $(document).ready(function(){
        $('.slick-carousel').slick({
            slidesToShow: 3,
            slidesToScroll: 1, 
            prevArrow: $('.prev-btn'), 
            nextArrow: $('.next-btn'),
            responsive: [
                {
                    breakpoint: 1024,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 1,
                    }
                },
                {
                    breakpoint: 768,
                    settings: {
                        slidesToShow: 1,
                        slidesToScroll: 1,
                    }
                }
            ]
        });
    });
</script>